<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Sales Data Builder' %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <% if (typeof extraCSS !== 'undefined') { %>
      <%= extraCSS %>
    <% } %>
</head>
<body class="role-<%= user && user.role ? user.role : '' %>">
    <% if (user) { %>
      <%- include('partials/sidebar') %>
    <% } %>
  <div class="main-content">
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="status-badge status-error" style="margin-bottom:1rem;"><%= error %></div>
    <% } %>
    <%- body %>
  </div>
    <script src="/js/main.js"></script>
    <% if (typeof extraJS !== 'undefined') { %>
      <%= extraJS %>
    <% } %>
</body>
</html>
