<% var safeTitle = typeof title !== 'undefined' ? title : 'Error'; %>
<% layout('layout', { title: safeTitle, user: typeof user !== 'undefined' ? user : null }) %>

<div class="container" style="margin-top: 3rem;">
  <div class="error-container" style="max-width:600px;margin:2em auto 0 auto;padding:2em;background:#fff;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.04);display:flex;flex-direction:column;align-items:center;gap:1em;">
    <h2 style="color:#d32f2f;margin-bottom:1em;">Error</h2>
    <div style="margin-bottom:1em;font-size:1.1em;text-align:center;">
      <%= safeError || 'An unexpected error occurred.' %>
    </div>
    <% if (safeError && safeError.status) { %>
      <div style="color:#888;font-size:0.95em;margin-bottom:1em;text-align:center;">Status: <%= safeError.status %></div>
    <% } %>
    <a href="/" class="btn btn-primary" style="width:100%;max-width:320px;">Go Home</a>
  </div>
  <style>
  @media (max-width: 600px) {
    .error-container {
      padding: 1em !important;
      gap: 0.7em !important;
    }
    .btn-primary {
      font-size: 1em !important;
      padding: 0.7em 1em !important;
    }
  }
  </style>
</div>
