<% layout('layout') %>
<div class="header">
    <div class="page-title">Audit Logs</div>
</div>
<div class="card">
    <div class="card-header">Recent Actions</div>
    <div class="card-body">
                <div class="table-container" style="max-width:100vw;overflow-x:auto;">
                    <table class="table audit-logs-table" style="min-width:600px;">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Actor</th>
                                <th>Action</th>
                                <th>Entity Type</th>
                                <th>Details</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(function(log) { %>
                                <tr style="height:2.2em;">
                                    <td style="word-break:break-word;max-width:80px;"><%= log.id %></td>
                                    <td style="word-break:break-word;max-width:120px;"><%= log.actor_email || log.actor_id %></td>
                                    <td style="word-break:break-word;max-width:120px;"><%= log.action %></td>
                                    <td style="word-break:break-word;max-width:120px;"><%= log.entity_type %></td>
                                    <td style="word-break:break-word;max-width:180px;"><%= log.details ? JSON.stringify(log.details) : '' %></td>
                                    <td style="word-break:break-word;max-width:120px;"><%= log.created_at || log.timestamp %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
<style>
@media (max-width: 768px) {
    .table-container {
        padding-left: 0;
        padding-right: 0;
    }
    .table {
        font-size: 0.95em;
    }
    .pagination {
        font-size: 1em;
        gap: 0.5em;
        flex-direction: column;
    }
}
</style>
        <div class="pagination" style="margin-top:1em; text-align:center;">
            <% if (page > 1) { %>
                <a href="?page=<%= page - 1 %>" class="btn btn-secondary">Previous</a>
            <% } %>
            <span style="margin:0 1em;">Page <%= page %> of <%= totalPages %></span>
            <% if (page < totalPages) { %>
                <a href="?page=<%= page + 1 %>" class="btn btn-secondary">Next</a>
            <% } %>
        </div>
    </div>
</div>
